<script>
  import { scrollNavManager } from '@/components/utils/scrollNavigation.js';

  // Initialize scroll navigation for insights tabs using centralized manager
  document.addEventListener('DOMContentLoaded', () => {
    const insightsNav = document.querySelector('.insights-nav-tabs');

    if (insightsNav) {
      // Register with the global scroll navigation manager
      scrollNavManager.registerNavElement(insightsNav as HTMLElement, {
        hideOnScrollDown: true,
        showOnScrollUp: true,
        onHide: () => {
          console.log('Insights navigation hidden on scroll down');
        },
        onShow: () => {
          console.log('Insights navigation shown on scroll up');
        }
      });

      console.log('âœ… Insights navigation registered with scroll manager');
    }
  });

  // Sidebar functionality
  document.addEventListener('DOMContentLoaded', () => {
    const navTabs = document.querySelectorAll('.insights-nav-tab');
    const sidebar = document.getElementById('blogSidebar');
    const closeBtn = document.getElementById('sidebarClose');
    const sidebarTitle = document.getElementById('sidebarTitle');

    // Widget elements
    const categoriesWidget = document.getElementById('categoriesWidget');
    const archiveWidget = document.getElementById('archiveWidget');
    const tagsWidget = document.getElementById('tagsWidget');

    // Widget titles
    const widgetTitles = {
      'categories': 'Categories',
      'archive': 'Archive',
      'tags': 'Tags'
    };

    // Open sidebar
    function openSidebar(widgetType) {
      // Update title
      sidebarTitle.textContent = widgetTitles[widgetType];

      // Hide all widgets
      categoriesWidget.style.display = 'none';
      archiveWidget.style.display = 'none';
      tagsWidget.style.display = 'none';

      // Show selected widget
      switch(widgetType) {
        case 'categories':
          categoriesWidget.style.display = 'block';
          break;
        case 'archive':
          archiveWidget.style.display = 'block';
          break;
        case 'tags':
          tagsWidget.style.display = 'block';
          break;
      }

      // Show sidebar
      sidebar.classList.add('active');

      // Update active tab
      navTabs.forEach(tab => tab.classList.remove('active'));
      document.querySelector(`[data-tab="${widgetType}"]`).classList.add('active');
    }

    // Close sidebar
    function closeSidebar() {
      sidebar.classList.remove('active');

      // Remove active state from tabs
      navTabs.forEach(tab => tab.classList.remove('active'));
    }

    // Event listeners
    navTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const widgetType = tab.getAttribute('data-tab');
        openSidebar(widgetType);
      });
    });

    closeBtn.addEventListener('click', closeSidebar);

    // Close sidebar on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sidebar.classList.contains('active')) {
        closeSidebar();
      }
    });
  });
</script>