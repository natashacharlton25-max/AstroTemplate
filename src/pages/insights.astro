---
import Layout from '@layouts/Layout.astro';
import siteConfig from '@/site.config';
---

<Layout title="Insights - IC the Moon" enableFooterReveal={true}>
  <main class="page-content">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
