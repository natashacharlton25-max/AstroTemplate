<style>
  .page-content {
    min-height: calc(100vh - 120px);
    padding-top: 80px;
  }

  .hero-section {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    padding: 4rem 0 5rem;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-section {
    padding: 4rem 0 667px;
  }

  /* Featured Article */
  .featured-article {
    margin-bottom: 4rem;
  }

  .featured-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px color-mix(in srgb, var(--color-secondary) 15%, transparent);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 48px color-mix(in srgb, var(--color-secondary) 25%, transparent);
  }

  .featured-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .featured-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .featured-badge {
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    align-self: flex-start;
    margin-bottom: 1rem;
  }

  .featured-content h2 {
    font-size: 1.75rem;
    color: var(--color-secondary);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .featured-content p {
    font-size: 1.125rem;
    color: var(--color-text-primary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px color-mix(in srgb, var(--color-secondary) 10%, transparent);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px color-mix(in srgb, var(--color-secondary) 20%, transparent);
  }

  .card-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card-content {
    padding: 1.5rem;
  }

  .category-tag {
    background: color-mix(in srgb, var(--color-primary) 15%, transparent);
    color: var(--color-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-content h3 {
    font-size: 1.25rem;
    color: var(--color-secondary);
    margin: 1rem 0 0.75rem;
    line-height: 1.4;
  }

  .card-content p {
    color: var(--color-text-primary);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  /* Article Meta */
  .article-meta, .card-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
  }

  .article-meta span, .card-meta span {
    opacity: 0.8;
  }

  /* Links */
  .read-more, .card-link {
    display: inline-block;
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .read-more:hover, .card-link:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }

  /* Load More */
  .load-more-section {
    text-align: center;
  }

  .load-more-btn {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .load-more-btn:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .featured-card {
      grid-template-columns: 1fr;
    }

    .featured-image img {
      height: 200px;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .hero-section {
      padding: 2rem 0 3rem;
    }

    .blog-section {
      padding: 2rem 0;
    }

    .article-meta, .card-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>