---
// AccessibilityPage.astro
import Layout from '@layouts/Layout.astro';
import siteConfig from '@/site.config';
---

<Layout title={`Accessibility Settings - ${siteConfig.brand.name}`}>
  
  <main class="accessibility-page">
    <!-- Hero Section -->
    <section class="accessibility-hero">
      <div class="container">
        <div class="hero-content">
          <h1>Accessibility Settings</h1>
          <p class="hero-description">
            Customize your experience to make our site more accessible and comfortable for you.
            We're committed to ensuring everyone can navigate and interact with our content easily.
          </p>
          
          <!-- Accessibility Features - Compact horizontal cards -->
          <div class="hero-features">
            <div class="hero-feature-card">
              <span class="material-icons hero-feature-icon" aria-hidden="true">keyboard</span>
              <h3>Keyboard Navigation</h3>
            </div>
            
            <div class="hero-feature-card">
              <span class="material-icons hero-feature-icon" aria-hidden="true">phone_android</span>
              <h3>Screen Reader Support</h3>
            </div>
            
            <div class="hero-feature-card">
              <span class="material-icons hero-feature-icon" aria-hidden="true">palette</span>
              <h3>High Contrast</h3>
            </div>
            
            <div class="hero-feature-card">
              <span class="material-icons hero-feature-icon" aria-hidden="true">text_fields</span>
              <h3>Scalable Text</h3>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Accessibility Controls -->
    <section class="accessibility-controls" id="accessibility-controls">
      <div class="container">
        
        <!-- Visual & Display Settings -->
        <fieldset class="settings-group">
          <legend>Visual & Display Settings</legend>
          <div class="controls-grid">
            
            <!-- Font Size Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">text_fields</span>
                <h3>Font Size</h3>
              </div>
              <p class="card-description">Adjust text size for better readability</p>
              <div class="slider-container">
                <label for="fontSize" class="sr-only">Font size multiplier</label>
                <input 
                  type="range" 
                  id="fontSize" 
                  class="accessibility-slider"
                  min="0.8" 
                  max="1.5" 
                  step="0.1" 
                  value="1"
                  aria-describedby="fontSize-desc"
                />
                <div class="slider-labels" id="fontSize-desc">
                  <span>Small</span>
                  <span>Normal</span>
                  <span>Large</span>
                </div>
              </div>
            </div>

            <!-- High Contrast Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">contrast</span>
                <h3>High Contrast</h3>
              </div>
              <p class="card-description" id="contrast-desc">Increase contrast for better visibility</p>
              <div class="toggle-container">
                <input type="checkbox" id="contrast" class="accessibility-toggle" aria-describedby="contrast-desc" />
                <label for="contrast" class="toggle-label">Toggle high contrast mode</label>
              </div>
            </div>

            <!-- Dark Mode Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">dark_mode</span>
                <h3>Dark Mode</h3>
              </div>
              <p class="card-description" id="darkMode-desc">Reduce eye strain with darker colors</p>
              <div class="toggle-container">
                <input type="checkbox" id="darkMode" class="accessibility-toggle" aria-describedby="darkMode-desc" />
                <label for="darkMode" class="toggle-label">Toggle dark mode</label>
              </div>
            </div>

            <!-- Reduce Motion Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">motion_photos_off</span>
                <h3>Reduce Motion</h3>
              </div>
              <p class="card-description" id="reducedMotion-desc">Minimize animations and transitions</p>
              <div class="toggle-container">
                <input type="checkbox" id="reducedMotion" class="accessibility-toggle" aria-describedby="reducedMotion-desc" />
                <label for="reducedMotion" class="toggle-label">Toggle reduced motion</label>
              </div>
            </div>
          </div>
        </fieldset>

        <!-- Navigation & Interaction Settings -->
        <fieldset class="settings-group">
          <legend>Navigation & Interaction Settings</legend>
          <div class="controls-grid">

            <!-- Enhanced Keyboard Navigation Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">keyboard</span>
                <h3>Enhanced Keyboard Navigation</h3>
              </div>
              <p class="card-description" id="keyboardNav-desc">Improve keyboard focus indicators</p>
              <div class="toggle-container">
                <input type="checkbox" id="keyboardNav" class="accessibility-toggle" aria-describedby="keyboardNav-desc" />
                <label for="keyboardNav" class="toggle-label">Toggle enhanced keyboard navigation</label>
              </div>
            </div>

            <!-- Skip Links Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">skip_next</span>
                <h3>Skip Links</h3>
              </div>
              <p class="card-description" id="skipLinks-desc">Show skip to content links</p>
              <div class="toggle-container">
                <input type="checkbox" id="skipLinks" class="accessibility-toggle" checked aria-describedby="skipLinks-desc" />
                <label for="skipLinks" class="toggle-label">Toggle skip links</label>
              </div>
            </div>

            <!-- Screen Reader Announcements Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">record_voice_over</span>
                <h3>Screen Reader Announcements</h3>
              </div>
              <p class="card-description" id="popupAnnouncements-desc">Announce when popups open and close</p>
              <div class="toggle-container">
                <input type="checkbox" id="popupAnnouncements" class="accessibility-toggle" checked aria-describedby="popupAnnouncements-desc" />
                <label for="popupAnnouncements" class="toggle-label">Toggle popup announcements</label>
              </div>
            </div>

            <!-- Popup Animation Speed Card -->
            <div class="setting-card">
              <div class="card-header">
                <span class="material-icons card-icon" aria-hidden="true">speed</span>
                <h3>Popup Animation Speed</h3>
              </div>
              <p class="card-description">Control how fast popups animate</p>
              <div class="slider-container">
                <label for="popupDelay" class="sr-only">Popup animation speed</label>
                <input 
                  type="range" 
                  id="popupDelay" 
                  class="accessibility-slider"
                  min="0.1" 
                  max="1" 
                  step="0.1" 
                  value="0.4"
                  aria-describedby="popupDelay-desc"
                />
                <div class="slider-labels" id="popupDelay-desc">
                  <span>Fast</span>
                  <span>Normal</span>
                  <span>Slow</span>
                </div>
              </div>
            </div>
          </div>
        </fieldset>

        <!-- Action Buttons -->
        <div class="action-buttons">
          <button id="resetSettings" class="secondary-btn">
            Reset to Defaults
          </button>
          <button id="saveSettings" class="primary-btn">
            Save Settings
          </button>
        </div>

      </div>
    </section>

  </main>

  <!-- Skip Links -->
  <div id="skipLinks" class="skip-links">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <a href="#accessibility-controls" class="skip-link">Skip to accessibility controls</a>
  </div>

  <!-- Screen Reader Announcements -->
  <div id="announcements" class="sr-only" aria-live="polite" aria-atomic="true"></div>
</Layout>

<!-- Google Material Icons -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>
  @import '@styles/global/accessibility.css';
</style>

<script>
  import '../pages/accessibility-page.js';
</script>