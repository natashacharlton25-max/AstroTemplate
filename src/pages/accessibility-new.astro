---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Accessibility Settings" enableFooterReveal={false}>
  <!-- Accessibility Popup Overlay -->
  <div class="accessibility-popup-overlay show" id="accessibilityPopup">
    <div class="accessibility-popup-container">
      <!-- Header Section -->
      <div class="accessibility-header">
        <div class="header-content">
          <div class="header-text">
            <div class="accessibility-icon">
              <svg fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 14H9v-2h2v2zm0-3H9V7h2v6zm2 3h2v-2h-2v2zm0-3h2V7h-2v6z"/>
              </svg>
            </div>
            <h1>Make our site <span class="highlight">accessible</span> for everyone</h1>
            <p class="header-description">Customize your browsing experience with comprehensive accessibility tools</p>
          </div>
          <button class="close-btn" onclick="closeAccessibilityPopup()">Ã—</button>
        </div>
        
        <div class="accessibility-stats">
          <div class="stat-item">
            <span class="stat-number">15+</span>
            <span class="stat-label">Features</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">WCAG</span>
            <span class="stat-label">Compliant</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">100%</span>
            <span class="stat-label">Customizable</span>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="accessibility-content">
        <!-- Quick Setup Section -->
        <div class="quick-setup-section">
          <h3>Quick Setup</h3>
          <p class="section-description">Choose a preset configuration to get started instantly</p>
          
          <div class="preset-buttons">
            <!-- Default Preset -->
            <button class="preset-btn default-preset" data-preset="default">
              <div class="preset-icon">
                <svg fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
              <span class="preset-label">Default</span>
            </button>

            <!-- Vision Preset -->
            <button class="preset-btn vision-preset" data-preset="vision">
              <div class="preset-icon">
                <svg fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                </svg>
              </div>
              <span class="preset-label">Vision Assistance</span>
            </button>

            <!-- Motor Preset -->
            <button class="preset-btn motor-preset" data-preset="motor">
              <div class="preset-icon">
                <svg fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 7h-4V4c0-1.1-.9-2-2-2h-4c-1.1 0-2 .9-2 2v3H4c-1.1 0-2 .9-2 2v11h20V9c0-1.1-.9-2-2-2zM10 4h4v3h-4V4zm8 16H6v-9h12v9z"/>
                </svg>
              </div>
              <span class="preset-label">Motor Assistance</span>
            </button>

            <!-- Cognitive Preset -->
            <button class="preset-btn cognitive-preset" data-preset="cognitive">
              <div class="preset-icon">
                <svg fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 11H7v6h2v-6zm4 0h-2v6h2v-6zm4 0h-2v6h2v-6zm2.5-9H20v2h-1v16h-2V4h-1.5l-1 2H20V4c0-1.1-.9-2-2-2h-4c-1.1 0-2 .9-2 2v2h5l-1-2z"/>
                </svg>
              </div>
              <span class="preset-label">Cognitive Support</span>
            </button>
          </div>
        </div>
        
        <!-- Settings Grid -->
        <div class="settings-grid">
          <!-- Visual Preferences -->
          <div class="settings-category">
            <h3>Visual Preferences</h3>
            
            <div class="setting-item">
              <div class="setting-info">
                <label for="darkMode" class="setting-label">Dark Mode</label>
                <p class="setting-description">Reduce eye strain with a dark color scheme</p>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="darkMode" data-setting="darkMode">
                <span class="toggle-slider"></span>
              </label>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <label for="fontSize" class="setting-label">Font Size</label>
                <p class="setting-description">Adjust text size for better readability</p>
              </div>
              <div class="range-control">
                <input type="range" id="fontSize" min="75" max="200" value="100" data-setting="fontSize">
                <span class="range-value">100%</span>
              </div>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <label for="highContrast" class="setting-label">High Contrast</label>
                <p class="setting-description">Increase contrast for better visibility</p>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="highContrast" data-setting="highContrast">
                <span class="toggle-slider"></span>
              </label>
            </div>
          </div>

          <!-- Site Assists -->
          <div class="settings-category">
            <h3>Site Assists</h3>
            
            <div class="setting-item">
              <div class="setting-info">
                <label for="keyboardHelpers" class="setting-label">Keyboard Helpers</label>
                <p class="setting-description">Enhanced focus indicators and navigation</p>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="keyboardHelpers" data-setting="keyboardHelpers">
                <span class="toggle-slider"></span>
              </label>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <label for="screenReaderHelpers" class="setting-label">Screen Reader Helpers</label>
                <p class="setting-description">Additional announcements and hints</p>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="screenReaderHelpers" data-setting="screenReaderHelpers">
                <span class="toggle-slider"></span>
              </label>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <label for="plainTextMode" class="setting-label">Reading Mode</label>
                <p class="setting-description">Simplified layout for focused reading</p>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="plainTextMode" data-setting="plainTextMode">
                <span class="toggle-slider"></span>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="../components/Accessability/accessibilityPanel.js"></script>

  <script>
    // Close popup function
    function closeAccessibilityPopup() {
      const popup = document.getElementById('accessibilityPopup');
      if (popup) {
        popup.classList.remove('show');
      }
    }

    // Show popup on page load (for direct access)
    document.addEventListener('DOMContentLoaded', function() {
      const popup = document.getElementById('accessibilityPopup');
      if (popup) {
        popup.classList.add('show');
      }
    });
  </script>
</Layout>

<style>
  /* Accessibility Popup Styles - Matching Search and Contact Popup Design */
  
  /* Popup Overlay */
  .accessibility-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 250, 246, 0.95);
    backdrop-filter: blur(6px);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    z-index: 10000;
    padding: 60px 20px 20px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .accessibility-popup-overlay.show {
    opacity: 1;
    visibility: visible;
  }

  /* Popup Container */
  .accessibility-popup-container {
    background: var(--color-background);
    border-radius: var(--radius-lg);
    max-width: 1200px;
    width: 100%;
    max-height: calc(100vh - 120px);
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transform: translateY(-30px) scale(0.95);
    transition: all 0.4s ease;
    display: grid;
    grid-template-rows: auto 1fr;
  }

  .accessibility-popup-overlay.show .accessibility-popup-container {
    transform: translateY(0) scale(1);
  }

  /* Header Section */
  .accessibility-header {
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-secondary-light) 100%);
    color: var(--color-background);
    padding: 32px;
    position: relative;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24px;
  }

  .header-text {
    flex: 1;
  }

  .accessibility-icon {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
  }

  .accessibility-icon svg {
    width: 24px;
    height: 24px;
    color: var(--color-background);
  }

  .accessibility-header h1 {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 12px 0;
    font-family: 'Poppins', sans-serif;
  }

  .highlight {
    color: var(--color-primary);
  }

  .header-description {
    font-size: 16px;
    opacity: 0.9;
    line-height: 1.5;
    margin: 0;
  }

  .close-btn {
    background: none;
    border: none;
    color: var(--color-background);
    font-size: 24px;
    cursor: pointer;
    padding: 8px;
    border-radius: 50%;
    transition: all 0.2s ease;
    flex-shrink: 0;
    margin-left: 20px;
  }

  .close-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.1);
  }

  .accessibility-stats {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 12px;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Content Section */
  .accessibility-content {
    padding: 32px;
    overflow-y: auto;
    max-height: calc(100vh - 300px);
  }

  .quick-setup-section {
    margin-bottom: 32px;
  }

  .quick-setup-section h3 {
    color: var(--color-secondary);
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
    font-family: 'Poppins', sans-serif;
  }

  .section-description {
    color: var(--color-text-primary);
    opacity: 0.8;
    margin-bottom: 20px;
    line-height: 1.5;
  }

  /* Preset Buttons */
  .preset-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .preset-btn {
    background: transparent;
    border: 2px solid var(--color-secondary);
    border-radius: var(--radius-lg);
    padding: 20px;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: 'Poppins', sans-serif;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .preset-btn:hover {
    background: var(--color-secondary);
    color: var(--color-background);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .preset-btn.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-background);
  }

  .preset-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .default-preset .preset-icon {
    background: linear-gradient(135deg, #6b7280, #9ca3af);
    color: white;
  }

  .vision-preset .preset-icon {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: white;
  }

  .motor-preset .preset-icon {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
  }

  .cognitive-preset .preset-icon {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
  }

  .preset-icon svg {
    width: 20px;
    height: 20px;
  }

  .preset-label {
    font-weight: 600;
    font-size: 16px;
  }

  /* Settings Grid */
  .settings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
  }

  .settings-category h3 {
    color: var(--color-secondary);
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 20px;
    font-family: 'Poppins', sans-serif;
  }

  .setting-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 16px 0;
    border-bottom: 1px solid #e5e5e5;
    gap: 16px;
  }

  .setting-item:last-child {
    border-bottom: none;
  }

  .setting-info {
    flex: 1;
  }

  .setting-label {
    color: var(--color-secondary);
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 4px;
    display: block;
    font-family: 'Poppins', sans-serif;
  }

  .setting-description {
    color: var(--color-text-primary);
    font-size: 14px;
    opacity: 0.8;
    line-height: 1.4;
    margin: 0;
  }

  /* Toggle Switches */
  .toggle-switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 26px;
    flex-shrink: 0;
  }

  .toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .toggle-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: 0.3s;
    border-radius: 26px;
  }

  .toggle-slider:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    transition: 0.3s;
    border-radius: 50%;
  }

  input:checked + .toggle-slider {
    background-color: var(--color-primary);
  }

  input:checked + .toggle-slider:before {
    transform: translateX(24px);
  }

  /* Range Controls */
  .range-control {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .range-control input[type="range"] {
    flex: 1;
    height: 6px;
    border-radius: 3px;
    background: #e5e5e5;
    outline: none;
    -webkit-appearance: none;
  }

  .range-control input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--color-primary);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .range-control input[type="range"]::-webkit-slider-thumb:hover {
    transform: scale(1.2);
  }

  .range-value {
    font-weight: 600;
    color: var(--color-secondary);
    min-width: 50px;
    text-align: center;
    font-size: 14px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .accessibility-popup-container {
      margin: 20px;
      max-height: calc(100vh - 40px);
    }

    .accessibility-header {
      padding: 24px;
    }

    .accessibility-header h1 {
      font-size: 24px;
    }

    .accessibility-content {
      padding: 24px;
    }

    .preset-buttons {
      grid-template-columns: 1fr;
    }

    .settings-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .header-content {
      flex-direction: column;
      gap: 16px;
    }

    .close-btn {
      align-self: flex-end;
      margin-left: 0;
    }

    .accessibility-stats {
      justify-content: center;
    }
  }
</style>
