---
import Layout from '@layouts/Layout.astro';
import siteConfig from '@/site.config';
---

<Layout title="Margin System Test - {siteConfig.brand.name}">
  <main class="page-content">
    <!-- Page Header -->
    <section class="page-header">
      <div class="page-header-content">
        <h1>Margin System Test</h1>
      </div>
    </section>

    <!-- Text Content Test -->
    <section class="text-content">
      <div class="unified-container">
        <h2>Text Content Layout Test</h2>
        <p>This section tests the unified margin system for text-based content like about pages and services.</p>
        <div class="test-box">
          <p>This box should have consistent margins across all breakpoints:</p>
          <ul>
            <li><strong>Desktop (>1200px):</strong> Left margin with nav space, auto right margin</li>
            <li><strong>Tablet (769-1200px):</strong> Reduced left margin, 60px right clearance</li>
            <li><strong>Mobile (<768px):</strong> 1rem left margin, 35px right clearance</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Card Layout Test -->
    <section class="card-layout">
      <div class="unified-container">
        <h2>Card Layout Test</h2>
        <p>This section tests card grids like projects, assets, and search results.</p>
        <div class="test-grid">
          <div class="test-card">Card 1</div>
          <div class="test-card">Card 2</div>
          <div class="test-card">Card 3</div>
          <div class="test-card">Card 4</div>
          <div class="test-card">Card 5</div>
          <div class="test-card">Card 6</div>
        </div>
      </div>
    </section>

    <!-- Blog Content Test -->
    <section class="blog-content">
      <div class="unified-container">
        <h2>Blog Content Test</h2>
        <p>This section tests blog-style content with narrower reading width.</p>
        <div class="blog-article">
          <h3>Sample Blog Article</h3>
          <p>This content should be narrower than regular content for better readability. The unified margin system automatically adjusts the maximum width for blog content while maintaining consistent side margins.</p>
          <blockquote>
            This is a sample blockquote that should maintain proper spacing within the blog content area.
          </blockquote>
          <p>Additional paragraph to test text flow and spacing consistency.</p>
        </div>
      </div>
    </section>

    <!-- Breakpoint Indicators -->
    <section class="breakpoint-test">
      <div class="unified-container">
        <h2>Breakpoint Test</h2>
        <div class="breakpoint-indicators">
          <div class="indicator desktop-only">Desktop (>1200px) Active</div>
          <div class="indicator tablet-only">Tablet (769-1200px) Active</div>
          <div class="indicator mobile-only">Mobile (<768px) Active</div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-content {
    min-height: 100vh;
  }

  /* Test sections */
  section {
    padding: 2rem 0;
    border-bottom: 1px solid color-mix(in srgb, var(--color-primary) 10%, transparent);
  }

  section:last-child {
    border-bottom: none;
  }

  h2 {
    color: var(--color-secondary);
    font-size: var(--text-2xl);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  h3 {
    color: var(--color-secondary);
    font-size: var(--text-xl);
    margin: 1.5rem 0 1rem 0;
  }

  p {
    color: var(--color-text-primary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  /* Test visual elements */
  .test-box {
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
    border: 2px solid var(--color-primary);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1rem 0;
  }

  .test-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 1rem 0;
  }

  .test-card {
    background: var(--color-background);
    border: 2px solid color-mix(in srgb, var(--color-primary) 20%, transparent);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    font-weight: 600;
    color: var(--color-secondary);
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  blockquote {
    background: color-mix(in srgb, var(--color-secondary) 10%, transparent);
    border-left: 4px solid var(--color-secondary);
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-secondary);
  }

  /* Breakpoint indicators */
  .breakpoint-indicators {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .indicator {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.875rem;
  }

  .desktop-only {
    background: var(--color-primary);
    color: var(--brand-background);
    display: block;
  }

  .tablet-only,
  .mobile-only {
    background: color-mix(in srgb, var(--color-text-secondary) 20%, transparent);
    color: var(--color-text-secondary);
    display: none;
  }

  /* Tablet breakpoint */
  @media (min-width: 769px) and (max-width: 1200px) {
    .desktop-only,
    .mobile-only {
      background: color-mix(in srgb, var(--color-text-secondary) 20%, transparent);
      color: var(--color-text-secondary);
      display: none;
    }

    .tablet-only {
      background: var(--color-primary);
      color: var(--brand-background);
      display: block;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 768px) {
    .desktop-only,
    .tablet-only {
      background: color-mix(in srgb, var(--color-text-secondary) 20%, transparent);
      color: var(--color-text-secondary);
      display: none;
    }

    .mobile-only {
      background: var(--color-primary);
      color: var(--brand-background);
      display: block;
    }

    .test-grid {
      grid-template-columns: 1fr;
    }

    .indicator {
      font-size: 0.75rem;
      padding: 0.5rem 1rem;
    }
  }

  /* Visual margin indicators */
  .unified-container {
    position: relative;
  }

  .unified-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: -10px;
    bottom: 0;
    width: 4px;
    background: color-mix(in srgb, var(--color-primary) 50%, transparent);
    border-radius: 2px;
  }

  .unified-container::after {
    content: '';
    position: absolute;
    top: 0;
    right: -10px;
    bottom: 0;
    width: 4px;
    background: color-mix(in srgb, var(--color-secondary) 50%, transparent);
    border-radius: 2px;
  }
</style>