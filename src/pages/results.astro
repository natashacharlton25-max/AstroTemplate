    .title-nav-wrapper {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .title-breadcrumb {
      text-align: center;
    }

    .display-title {
      text-align: center;
      margin-bottom: 0.5rem;
    }

    .search-container {
      max-width: 90%;
    }

