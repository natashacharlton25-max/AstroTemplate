    }

    .search-icon {
      width: 16px; /* Smaller icon */
      height: 16px;
      margin-right: 0.75rem;
    }

    .search-input {
      font-size: 0.875rem; /* Smaller text */
    }

    .search-input::placeholder {
      font-size: 0.875rem;
    }

    .search-submit {
      width: 28px; /* Smaller button */
      height: 28px;
      margin-left: 0.75rem;
    }

    .search-submit svg {
      width: 14px; /* Smaller icon */
      height: 14px;
    }

    .search-nav-section {
      padding: 1.5rem 0; /* Reduced padding */
    }

