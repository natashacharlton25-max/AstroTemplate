---
import Layout from '../layouts/Layout.astro';
import Header from '../components/GlassmorphicNav.astro';
import '../styles/global.css';
---

<Layout title="Contact - IC the Moon">
  <Header />
  
  <main class="min-h-screen pt-20">
    <section class="section">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          
          <!-- Header -->
          <div class="text-center mb-12">
            <h1 class="mb-6">Get in Touch</h1>
            <p class="text-xl text-primary leading-relaxed">
              We'd love to hear from you! Reach out anytime for guidance, insights, 
              or just to chat about how lunar energy can support your growth.
            </p>
          </div>
          
          <!-- Contact Methods -->
          <div class="grid md:grid-cols-2 gap-12">
            
            <!-- Contact Form -->
            <div class="glass p-8">
              <h3 class="text-2xl font-semibold mb-6 text-light">Send us a message</h3>
              <form id="contactForm" class="space-y-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-light mb-2">Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full p-3 rounded-lg bg-white/20 border border-white/30 text-light placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-accent/50"
                    placeholder="Your name"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-light mb-2">Email</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full p-3 rounded-lg bg-white/20 border border-white/30 text-light placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-accent/50"
                    placeholder="your@email.com"
                  />
                </div>
                
                <div>
                  <label for="subject" class="block text-sm font-medium text-light mb-2">Subject</label>
                  <select 
                    id="subject" 
                    name="subject"
                    class="w-full p-3 rounded-lg bg-white/20 border border-white/30 text-light focus:outline-none focus:ring-2 focus:ring-accent/50"
                  >
                    <option value="">Select a topic</option>
                    <option value="coaching">Personal Coaching</option>
                    <option value="guidance">Lunar Guidance</option>
                    <option value="resources">Resources & Tools</option>
                    <option value="partnership">Partnership</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium text-light mb-2">Message</label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5"
                    required
                    class="w-full p-3 rounded-lg bg-white/20 border border-white/30 text-light placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-accent/50"
                    placeholder="Tell us how we can help..."
                  ></textarea>
                </div>
                
                <button type="submit" class="neumorphic-btn w-full">
                  Send Message
                </button>
              </form>
            </div>
            
            <!-- Contact Info -->
            <div class="space-y-8">
              
              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5-8-5V6l8 5 8-5v2z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary mb-1">Email Us</h4>
                  <a href="mailto:hello@icthemoon.com" class="text-accent hover:text-primary transition-colors">
                    hello@icthemoon.com
                  </a>
                  <p class="text-primary/70 text-sm mt-1">We typically respond within 24 hours</p>
                </div>
              </div>
              
              <!-- Resources -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary mb-1">Resources</h4>
                  <a href="/resources" class="text-accent hover:text-primary transition-colors">
                    Browse our resource library
                  </a>
                  <p class="text-primary/70 text-sm mt-1">Free guides, tools, and lunar calendars</p>
                </div>
              </div>
              
              <!-- Insights Blog -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary mb-1">Insights & Articles</h4>
                  <a href="https://insights.icthemoon.com/" target="_blank" class="text-accent hover:text-primary transition-colors">
                    Visit our insights blog
                  </a>
                  <p class="text-primary/70 text-sm mt-1">Deep dives into lunar wisdom and personal growth</p>
                </div>
              </div>
              
              <!-- Quote -->
              <div class="bg-gradient-to-br from-primary/5 to-accent/5 p-6 rounded-xl">
                <blockquote class="text-primary italic">
                  "The moon does not fight. It attacks no one. It does not worry. 
                  It does not try to crush others. It keeps to its course, 
                  but by its very nature, it gently influences."
                </blockquote>
                <cite class="text-accent text-sm mt-2 block">â€” Ming-Dao Deng</cite>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <!-- Footer -->
  <footer class="py-12 bg-cream border-t border-gray-200">
    <div class="container text-center">
      <div class="mb-8">
        <div class="text-2xl font-bold text-primary mb-2">IC the Moon</div>
        <p class="text-primary">
          Empowering <span class="text-accent font-medium">personal growth</span> through natural strategies.
        </p>
      </div>
      <p class="text-sm text-primary/70">Copyright @2025 ICthemoon.com</p>
    </div>
  </footer>
</Layout>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // In a real implementation, you would send this to your backend
        console.log('Form submitted:', data);
        
        // Show success message (you can replace this with a proper notification system)
        alert('Thank you for your message! We\'ll get back to you soon.');
        
        // Reset form
        form.reset();
      });
    }
  });
</script>