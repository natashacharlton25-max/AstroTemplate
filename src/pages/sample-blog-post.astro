---
import Layout from '@layouts/Layout.astro';
import BrandHero from '@components/Hero/BrandHero.astro';
import siteConfig from '@/site.config';
---

<Layout title={`Sample Blog Post - ${siteConfig.brand.name}`}>
  <main class="page-content">
    <!-- Page Header -->
    <section class="page-header">
      <div class="page-header-content">
        <h1>Sample Blog Post</h1>
      </div>
    </section>

    <!-- Hero Component -->
    <BrandHero />
  </main>
</Layout>

<style>
  .page-content {
    min-height: 100vh;
  }

  .page-header {
    overflow: visible !important;
  }
</style>