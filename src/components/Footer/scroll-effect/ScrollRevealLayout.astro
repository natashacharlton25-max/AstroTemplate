---
import Footer from '../Footer.astro';
import BottomNav from '../../BottomNav/BottomNav.astro';

export interface Props {
  title?: string;
}

const { title = "Page Title" } = Astro.props;
---

<>
  <!-- Main Content Wrapper with scroll reveal -->
  <main role="main" id="main-content" class="wrapper relative z-10 transition-all duration-700 ease-out origin-top scroll-reveal-main" style="min-height: 240vh;">
    <slot />
    <!-- Add extra space at bottom to ensure proper scroll reveal -->
    <div class="h-32 sm:h-40 lg:h-48"></div>
  </main>
  
  
  <!-- Footer Section with reveal effect -->
  <footer role="contentinfo" class="fixed inset-0 z-0 flex items-end justify-center" style="background: linear-gradient(135deg, var(--brand-navy-dark), var(--brand-navy), var(--brand-navy-light))">
    <!-- Placeholder for future animated background -->
    <!-- TODO: Add animated background effect similar to https://codepen.io/mfritsch/pen/KdKoKQ -->
    <div class="w-full px-8 py-8">
      <div class="footer-reveal-container">
        <Footer enableAnimations={true} />
      </div>
    </div>
  </footer>
  
  <!-- Bottom Navigation -->
  <nav role="navigation" aria-label="Quick actions">
    <BottomNav />
  </nav>

  <script>
    import { initScrollReveal } from './scrollRevealScript.js';
    initScrollReveal();
  </script>

  <style>
    @import './scrollRevealLayout.css';
  </style>
</>