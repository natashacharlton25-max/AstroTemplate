---
import { siteConfig } from '@/site.config';

export interface Props {
  showLogo?: boolean;
}

const { showLogo = true } = Astro.props;
---

<footer class="simple-footer">
  <div class="simple-footer-container">
    
    {showLogo && (
      <div class="simple-footer-header">
        <div class="simple-footer-logo">
          <img src={siteConfig.brand.logo.path} alt={siteConfig.brand.logo.alt} />
        </div>
        <p class="simple-footer-tagline">{siteConfig.brand.tagline}</p>
      </div>
    )}

    <div class="simple-footer-content">
      <!-- Simple links grid -->
      <div class="simple-footer-links">
        <div class="simple-footer-section">
          <h4>Company</h4>
          <a href="/about">About</a>
          <a href="/services">Services</a>
          <a href="/projects">Projects</a>
        </div>
        
        <div class="simple-footer-section">
          <h4>Resources</h4>
          <a href="/insights">Insights</a>
          <a href="/assets">Assets</a>
          <a href="/contact">Contact</a>
        </div>
        
        <div class="simple-footer-section simple-footer-legal">
          <h4>Legal</h4>
          <a href="/privacy">Privacy</a>
          <a href="/terms">Terms</a>
</a>
        </div>
      </div>
    </div>

    <!-- Mobile Legal Links - Small horizontal line -->
    <div class="simple-footer-mobile-legal">
      <a href="/privacy">Privacy</a>
      <a href="/terms">Terms</a>
    </div>

    <div class="simple-footer-bottom">
      <div class="simple-footer-copyright">
        Â© {new Date().getFullYear()} {siteConfig.brand.name}. All rights reserved.
      </div>
      <div class="simple-footer-contact">
        <a href={`mailto:${siteConfig.contact.email}`}>{siteConfig.contact.email}</a>
      </div>
    </div>

  </div>
</footer>

<style>
  .simple-footer {
    width: 100%;
    margin-top: auto;
    padding: 2rem 1rem 1rem;
  }

  .simple-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    background: var(--color-surface-elevated);
    border: 1px solid var(--clr-surface-a30);
    border-radius: 24px;
    padding: 2rem;
    box-shadow: 0 4px 16px color-mix(in srgb, var(--color-secondary) 8%, transparent);
  }

  .simple-footer-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--clr-surface-a20);
  }

  .simple-footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .simple-footer-logo img {
    height: 32px;
    width: auto;
  }


  .simple-footer-tagline {
    color: var(--color-text-primary);
    opacity: 0.8;
    margin: 0;
  }

  .simple-footer-content {
    margin-bottom: 2rem;
  }

  .simple-footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .simple-footer-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    text-align: center;
  }

  .simple-footer-section h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-secondary);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .simple-footer-section a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
    opacity: 0.8;
  }

  .simple-footer-section a:hover {
    color: var(--color-primary);
    opacity: 1;
  }

  .simple-footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--clr-surface-a20);
    font-size: 0.875rem;
    color: var(--color-text-primary);
    opacity: 0.7;
  }

  .simple-footer-contact a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .simple-footer-contact a:hover {
    color: var(--color-primary);
  }

  /* Mobile Legal Links - Hidden on desktop */
  .simple-footer-mobile-legal {
    display: none;
  }

  @media (max-width: 768px) {
    /* Hide desktop legal section on mobile */
    .simple-footer-legal {
      display: none;
    }

    /* Show mobile legal links */
    .simple-footer-mobile-legal {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin: 1rem 0;
      padding-top: 1rem;
      border-top: 1px solid var(--clr-surface-a20);
    }

    .simple-footer-mobile-legal a {
      color: var(--color-text-primary);
      text-decoration: none;
      font-size: 0.75rem;
      opacity: 0.7;
      transition: all 0.2s ease;
    }

    .simple-footer-mobile-legal a:hover {
      color: var(--color-primary);
      opacity: 1;
    }
    .simple-footer {
      padding: 1.5rem 1rem 1rem;
    }

    .simple-footer-container {
      border-radius: 20px;
      padding: 1.5rem;
    }

    .simple-footer-links {
      grid-template-columns: 1fr;
      gap: 1rem;
      text-align: center;
    }

    .simple-footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>