---
// Import footer data and check for animation preference
import { footerData } from './links/footerData.js';

// Props to control features
export interface Props {
  enableAnimations?: boolean;
  showLogo?: boolean;
  showSocial?: boolean;
  showContact?: boolean;
}

const { 
  enableAnimations = true, 
  showLogo = true, 
  showSocial = true, 
  showContact = true 
} = Astro.props;
---

<footer class={`footer ${enableAnimations ? 'footer-animated' : ''}`}>
  <div class="footer-container">
    
    <!-- Footer Header with Logo and Tagline -->
    {showLogo && (
      <div class="footer-header">
        <a href="/" class="footer-logo">
          <img src="/images/LogoPlaceholder.png" alt={footerData.company.name} />
          <span class="footer-logo-text">{footerData.company.name}</span>
        </a>
        <p class="footer-tagline">{footerData.company.tagline}</p>
        <p class="footer-description">{footerData.company.description}</p>
      </div>
    )}

    <!-- Footer Content Grid -->
    <div class="footer-content">
      
      <!-- Mobile Layout - Clean and Simple -->
      <div class="block sm:hidden">
        <!-- Quick Links for Mobile -->
        <div class="footer-mobile-sections">
          <div class="grid grid-cols-2 gap-4 mb-6">
            <!-- Left Column - Quick Links -->
            <div class="footer-mobile-column">
              <h3 class="footer-mobile-title">Quick Links</h3>
              <div class="footer-mobile-links">
                {footerData.links.company.items.slice(0, 2).map(link => (
                  <a href={link.url} class="footer-mobile-link">{link.name}</a>
                ))}
                {footerData.links.products.items.slice(0, 2).map(link => (
                  <a href={link.url} class="footer-mobile-link">{link.name}</a>
                ))}
              </div>
            </div>

            <!-- Right Column - Support -->
            <div class="footer-mobile-column">
              <h3 class="footer-mobile-title">Support</h3>
              <div class="footer-mobile-links">
                {footerData.links.resources.items.slice(0, 3).map(link => (
                  <a href={link.url} class="footer-mobile-link">{link.name}</a>
                ))}
              </div>
            </div>
          </div>

          <!-- Mobile Contact & Social - Compact -->
          {(showContact || showSocial) && (
            <div class="footer-mobile-contact">
              <!-- Contact Info - Email Only -->
              {showContact && (
                <div class="footer-mobile-contact-compact">
                  <a href={`mailto:${footerData.contact.email}`} class="footer-mobile-contact-email">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <span>{footerData.contact.email}</span>
                  </a>
                </div>
              )}

              <!-- Social Links - Compact -->
              {showSocial && (
                <div class="footer-mobile-social">
                  {footerData.social.map(social => (
                    <a 
                      href={social.url} 
                      class="footer-mobile-social-link"
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={social.name}
                    >
                      {social.icon === 'twitter' && (
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                      )}
                      {social.icon === 'linkedin' && (
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                      )}
                      {social.icon === 'github' && (
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 10.95-.111-.946-.212-2.4.044-3.44.231-.937 1.495-6.341 1.495-6.341s-.382-.764-.382-1.89c0-1.771 1.026-3.092 2.305-3.092 1.087 0 1.613.815 1.613 1.79 0 1.089-.694 2.718-.051 4.237.388 1.273 1.299 2.001 2.479 2.001 2.977 0 4.981-3.816 4.981-8.324 0-3.442-2.321-6.052-6.548-6.052-4.916 0-8.058 3.631-8.058 7.677 0 1.393.486 2.369 1.234 3.107.386.454.437.638.293 1.168-.1.375-.323 1.287-.416 1.647-.149.556-.611.756-1.175.553-2.056-.956-3.014-3.518-3.014-6.236 0-4.781 4.221-10.495 12.622-10.495 6.68 0 11.134 4.749 11.134 9.665 0 6.627-3.92 11.532-9.724 11.532-1.975 0-3.73-1.074-4.35-2.415 0 0-1.027 4.077-1.263 4.922-.457 1.716-1.341 3.87-2.017 5.201 1.82.558 3.751.85 5.757.85 6.621 0 11.988-5.367 11.988-11.987C24.005 5.367 18.638.001 12.017.001z"/>
                        </svg>
                      )}
                      {social.icon === 'instagram' && (
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                      )}
                    </a>
                  ))}
                </div>
              )}
            </div>
          )}
        </div>
      </div>

      <!-- Desktop Layout - Original Grid -->
      <div class="hidden sm:grid sm:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Company Links -->
        <div class="footer-section">
          <h3 class="footer-section-title">{footerData.links.company.title}</h3>
          <div class="footer-links">
            {footerData.links.company.items.map(link => (
              <a href={link.url} class="footer-link">{link.name}</a>
            ))}
          </div>
        </div>

        <!-- Products Links -->
        <div class="footer-section">
          <h3 class="footer-section-title">{footerData.links.products.title}</h3>
          <div class="footer-links">
            {footerData.links.products.items.map(link => (
              <a href={link.url} class="footer-link">{link.name}</a>
            ))}
          </div>
        </div>

        <!-- Resources Links -->
        <div class="footer-section">
          <h3 class="footer-section-title">{footerData.links.resources.title}</h3>
          <div class="footer-links">
            {footerData.links.resources.items.map(link => (
              <a href={link.url} class="footer-link">{link.name}</a>
            ))}
          </div>
        </div>

        <!-- Desktop Contact Section -->
        {showContact && (
          <div class="footer-section">
            <h3 class="footer-section-title">Contact</h3>
            <div class="footer-contact">
              <div class="footer-contact-item">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href={`mailto:${footerData.contact.email}`}>{footerData.contact.email}</a>
              </div>
              <div class="footer-contact-item">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <a href={`tel:${footerData.contact.phone}`}>{footerData.contact.phone}</a>
              </div>
            </div>
          </div>
        )}
      </div>

    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        <span>Â© {footerData.copyright.year} {footerData.company.name}.</span>
        <span>{footerData.copyright.text}</span>
      </div>
      
      <div class="footer-bottom-links">
        {footerData.links.legal.items.map(link => (
          <a href={link.url} class="footer-bottom-link">{link.name}</a>
        ))}
      </div>
    </div>

  </div>
</footer>

<!-- Import Styles -->
<style>
  @import './links/footerStyles.css';
</style>

<!-- Animations will be added later when footerAnimations.css is created -->