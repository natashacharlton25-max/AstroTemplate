---
// Animated Day/Night Cycle Footer Component
---

<div class="footer-card-wrapper">
  <footer class="animated-footer" id="animated-footer">
    <!-- Sky Background -->
    <div class="sky-container">
    <!-- Day Sky -->
    <div class="sky-layer day-sky"></div>
    <!-- Dusk/Dawn Sky -->
    <div class="sky-layer dusk-sky"></div>
    <!-- Night Sky -->
    <div class="sky-layer night-sky"></div>
  </div>

  <!-- Celestial Elements -->
  <div class="celestial-container">
    <!-- Asteroids (Day) -->
    <div class="asteroid asteroid-1"></div>
    <div class="asteroid asteroid-2"></div>
    <div class="asteroid asteroid-3"></div>
    
    <!-- Stars (Night) -->
    <div class="stars">
      <div class="star star-1"></div>
      <div class="star star-2"></div>
      <div class="star star-3"></div>
      <div class="star star-4"></div>
      <div class="star star-5"></div>
      <div class="star star-6"></div>
      <div class="star star-7"></div>
      <div class="star star-8"></div>
    </div>
    
    <!-- Shooting Stars -->
    <div class="shooting-star shooting-star-1"></div>
    <div class="shooting-star shooting-star-2"></div>
    
    <!-- Aurora -->
    <div class="aurora aurora-1"></div>
    <div class="aurora aurora-2"></div>
    
    <!-- Moon -->
    <div class="moon"></div>
  </div>

  <!-- Footer Content -->
  <div class="footer-content">
    <!-- Logo/Moon Column (25%) -->
    <div class="logo-column">
      <div class="footer-logo">
        <!-- Circle logo that gets illuminated by the moon -->
        <img src="/images/Circle-logo.svg" alt="IC the Moon" class="circle-logo" />
        <!-- Moon glow behind logo -->
        <div class="logo-moon-glow"></div>
      </div>
    </div>
    
    <!-- Text Column (75%) -->
    <div class="text-column">
      <div class="footer-text">
        <h3 class="footer-title">IC the Moon</h3>
        <p class="footer-description">
          Crafting digital experiences that shine as bright as the stars. 
          From web development to design, we illuminate your path to success.
        </p>
        <div class="footer-links">
          <a href="/about" class="footer-link">About</a>
          <a href="/projects" class="footer-link">Projects</a>
          <a href="/contact" class="footer-link">Contact</a>
          <a href="https://insights.icthemoon.com" class="footer-link" target="_blank">Insights</a>
        </div>
        <div class="footer-copyright">
          <p>&copy; 2024 IC the Moon. All rights reserved.</p>
        </div>
      </div>
    </div>
  </div>
  </footer>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700@display=swap');

  /* Color Palette */
  :root {
    --brand-blue: #184e77;
    --pink-accent: #e63961;
    --cream-bg: #fff8f0;
    --light-blue: #87ceeb;
    --night-blue: #0c1b3d;
    --dusk-purple: #4a154b;
    --moon-glow: rgba(255, 248, 240, 0.9);
  }

  .footer-card-wrapper {
    padding: 40px 20px;
    background: var(--cream-bg, #fff8f0);
  }

  .animated-footer {
    position: relative;
    width: 100%;
    max-width: 1200px;
    height: 400px;
    margin: 0 auto;
    overflow: hidden;
    font-family: 'Poppins', sans-serif;
    background: var(--light-blue);
    border-radius: 24px;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 8px 16px rgba(0, 0, 0, 0.08),
      0 4px 8px rgba(0, 0, 0, 0.05);
    transition: background 8s ease-in-out, box-shadow 0.3s ease;
  }

  .animated-footer:hover {
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.15),
      0 10px 20px rgba(0, 0, 0, 0.1),
      0 5px 10px rgba(0, 0, 0, 0.08);
  }

  /* Sky Layers */
  .sky-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .sky-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: opacity 4s ease-in-out;
  }

  .day-sky {
    background: linear-gradient(180deg, var(--light-blue) 0%, var(--light-blue) 40%, var(--cream-bg) 100%);
    opacity: 1;
  }

  .dusk-sky {
    background: linear-gradient(180deg, var(--dusk-purple) 0%, var(--brand-blue) 40%, var(--pink-accent) 80%, var(--brand-blue) 100%);
    opacity: 0;
  }

  .night-sky {
    background: linear-gradient(180deg, var(--night-blue) 0%, var(--night-blue) 40%, var(--brand-blue) 100%);
    opacity: 0;
  }

  /* Celestial Elements */
  .celestial-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  /* Asteroids */
  .asteroid {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--brand-blue);
    border-radius: 50%;
    opacity: 0.8;
    animation: asteroidStreak 3s linear infinite;
  }

  .asteroid-1 {
    top: 20%;
    left: -10px;
    animation-delay: 0s;
  }

  .asteroid-2 {
    top: 40%;
    left: -10px;
    animation-delay: 1s;
  }

  .asteroid-3 {
    top: 60%;
    left: -10px;
    animation-delay: 2s;
  }

  @keyframes asteroidStreak {
    0% {
      transform: translateX(0) translateY(0);
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    90% {
      opacity: 0.8;
    }
    100% {
      transform: translateX(calc(100vw + 20px)) translateY(-50px);
      opacity: 0;
    }
  }

  /* Stars */
  .stars {
    opacity: 0;
    transition: opacity 2s ease-in-out;
  }

  .star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    border-radius: 50%;
    animation: starTwinkle 4s ease-in-out infinite;
  }

  .star-1 { top: 15%; left: 20%; animation-delay: 0s; }
  .star-2 { top: 25%; left: 80%; animation-delay: 1s; }
  .star-3 { top: 35%; left: 60%; animation-delay: 0.5s; }
  .star-4 { top: 45%; left: 30%; animation-delay: 2s; }
  .star-5 { top: 55%; left: 75%; animation-delay: 1.5s; }
  .star-6 { top: 20%; left: 45%; animation-delay: 3s; }
  .star-7 { top: 65%; left: 15%; animation-delay: 2.5s; }
  .star-8 { top: 30%; left: 90%; animation-delay: 3.5s; }

  @keyframes starTwinkle {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.5); }
  }

  /* Shooting Stars */
  .shooting-star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    border-radius: 50%;
    opacity: 0;
    box-shadow: 0 0 6px 2px rgba(255, 255, 255, 0.3);
  }

  .shooting-star-1 {
    top: 20%;
    right: -10px;
    animation: shootingStar 6s linear infinite;
    animation-delay: 2s;
  }

  .shooting-star-2 {
    top: 40%;
    right: -10px;
    animation: shootingStar 6s linear infinite;
    animation-delay: 5s;
  }

  @keyframes shootingStar {
    0% {
      transform: translateX(0) translateY(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateX(calc(-100vw - 20px)) translateY(200px);
      opacity: 0;
    }
  }

  /* Aurora - Northern Lights */
  .aurora {
    position: absolute;
    width: 100%;
    height: 80%;
    top: 0;
    opacity: 0;
    pointer-events: none;
    animation: auroraShimmer 10s ease-in-out infinite;
  }

  .aurora-1 {
    background: 
      linear-gradient(90deg, transparent 0%, rgba(24, 78, 119, 0.3) 15%, transparent 25%),
      linear-gradient(90deg, transparent 30%, rgba(230, 57, 97, 0.2) 45%, transparent 55%),
      linear-gradient(90deg, transparent 60%, rgba(24, 78, 119, 0.25) 75%, transparent 85%);
    background-size: 300px 100%, 250px 100%, 200px 100%;
    animation-delay: 0s;
  }

  .aurora-2 {
    background: 
      linear-gradient(90deg, transparent 10%, rgba(230, 57, 97, 0.25) 25%, transparent 35%),
      linear-gradient(90deg, transparent 45%, rgba(24, 78, 119, 0.2) 60%, transparent 70%),
      linear-gradient(90deg, transparent 75%, rgba(230, 57, 97, 0.15) 90%, transparent 100%);
    background-size: 180px 100%, 220px 100%, 160px 100%;
    animation-delay: 5s;
  }

  @keyframes auroraShimmer {
    0%, 100% { 
      opacity: 0;
      transform: translateX(0) skewX(0deg);
    }
    25% { 
      opacity: 0.4;
      transform: translateX(20px) skewX(2deg);
    }
    50% { 
      opacity: 0.7;
      transform: translateX(-10px) skewX(-1deg);
    }
    75% { 
      opacity: 0.5;
      transform: translateX(15px) skewX(1.5deg);
    }
  }

  /* Moon */
  .moon {
    position: absolute;
    width: 80px;
    height: 80px;
    background: radial-gradient(circle, var(--moon-glow) 0%, rgba(255, 248, 240, 0.7) 100%);
    border-radius: 50%;
    top: 15%;
    left: -100px;
    opacity: 0;
    box-shadow: 0 0 40px rgba(255, 248, 240, 0.5);
    transition: all 3s ease-in-out;
  }

  /* Footer Content */
  .footer-content {
    position: relative;
    z-index: 10;
    display: flex;
    height: 100%;
    padding: 40px;
    align-items: center;
  }

  .logo-column {
    flex: 0 0 25%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer-logo {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
  }

  .circle-logo {
    width: 60px;
    height: 60px;
    z-index: 2;
    transition: filter 3s ease-in-out;
  }

  .logo-moon-glow {
    position: absolute;
    width: 80px;
    height: 80px;
    background: radial-gradient(circle, var(--moon-glow) 0%, rgba(255, 248, 240, 0.6) 60%, transparent 100%);
    border-radius: 50%;
    opacity: 0;
    z-index: 1;
    box-shadow: 0 0 40px rgba(255, 248, 240, 0.8), 0 0 80px rgba(255, 248, 240, 0.4);
    transition: opacity 3s ease-in-out;
  }

  .text-column {
    flex: 0 0 75%;
    padding-left: 40px;
    border-left: none;
  }

  .footer-text {
    transition: opacity 3s ease-in-out;
  }

  .footer-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--brand-blue);
    margin: 0 0 20px 0;
    font-family: 'Poppins', sans-serif;
  }

  .footer-description {
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--brand-blue);
    line-height: 1.6;
    margin: 0 0 30px 0;
    max-width: 600px;
  }

  .footer-links {
    display: flex;
    gap: 30px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .footer-link {
    font-size: 1rem;
    font-weight: 600;
    color: var(--brand-blue);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--pink-accent);
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    color: var(--pink-accent);
  }

  .footer-link:hover::after {
    width: 100%;
  }

  .footer-copyright {
    font-size: 0.9rem;
    color: var(--brand-blue);
    opacity: 0.7;
  }

  .footer-copyright p {
    margin: 0;
  }

  /* Animation States */
  .animated-footer.day .day-sky { opacity: 1; }
  .animated-footer.day .dusk-sky { opacity: 0; }
  .animated-footer.day .night-sky { opacity: 0; }
  .animated-footer.day .stars { opacity: 0; }
  .animated-footer.day .aurora { opacity: 0; }
  .animated-footer.day .moon { opacity: 0; left: -100px; }
  .animated-footer.day .logo-moon-glow { opacity: 0; }

  .animated-footer.dusk .day-sky { opacity: 0; }
  .animated-footer.dusk .dusk-sky { opacity: 1; }
  .animated-footer.dusk .night-sky { opacity: 0; }
  .animated-footer.dusk .stars { opacity: 0.3; }
  .animated-footer.dusk .aurora { opacity: 0.2; }
  .animated-footer.dusk .logo-moon-glow { opacity: 0.3; }

  .animated-footer.night .day-sky { opacity: 0; }
  .animated-footer.night .dusk-sky { opacity: 0; }
  .animated-footer.night .night-sky { opacity: 1; }
  .animated-footer.night .stars { opacity: 1; }
  .animated-footer.night .aurora { opacity: 0.6; }
  .animated-footer.night .moon { opacity: 1; left: 15%; }
  .animated-footer.night .footer-text { opacity: 0.6; }
  .animated-footer.night .logo-moon-glow { opacity: 1; }
  .animated-footer.night .circle-logo { filter: brightness(1.3) drop-shadow(0 0 10px rgba(255,248,240,0.8)); }

  .animated-footer.dawn .day-sky { opacity: 1; }
  .animated-footer.dawn .dusk-sky { opacity: 0; }
  .animated-footer.dawn .night-sky { opacity: 0; }
  .animated-footer.dawn .stars { opacity: 0; }
  .animated-footer.dawn .aurora { opacity: 0; }
  .animated-footer.dawn .moon { opacity: 0; left: calc(100% + 50px); }
  .animated-footer.dawn .footer-text { opacity: 1; }
  .animated-footer.dawn .logo-moon-glow { opacity: 0; }
  .animated-footer.dawn .circle-logo { filter: none; }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-card-wrapper {
      padding: 20px 10px;
    }
    
    .animated-footer {
      height: 500px;
      border-radius: 20px;
      box-shadow: 
        0 15px 30px rgba(0, 0, 0, 0.1),
        0 6px 12px rgba(0, 0, 0, 0.08);
    }
    
    .footer-content {
      flex-direction: column;
      text-align: center;
      padding: 30px 20px;
    }
    
    .logo-column {
      flex: 0 0 auto;
      margin-bottom: 30px;
    }
    
    .text-column {
      flex: 1;
      padding-left: 0;
    }
    
    .footer-title {
      font-size: 2rem;
    }
    
    .footer-links {
      justify-content: center;
    }
  }
</style>

<script>
  // Animation Controller
  class FooterAnimationController {
    constructor() {
      this.footer = document.getElementById('animated-footer');
      this.currentPhase = 'day';
      this.phaseIndex = 0;
      this.phases = ['day', 'dusk', 'night', 'dawn'];
      this.phaseDurations = {
        day: 8000,    // 8 seconds
        dusk: 4000,   // 4 seconds  
        night: 10000, // 10 seconds
        dawn: 4000    // 4 seconds
      };
      
      this.init();
    }

    init() {
      if (!this.footer) return;
      
      // Start with day phase
      this.setPhase('day');
      
      // Start animation cycle immediately
      this.startCycle();
      
      // Pause on hover
      this.footer.addEventListener('mouseenter', () => this.pauseAnimation());
      this.footer.addEventListener('mouseleave', () => this.resumeAnimation());
    }


    setPhase(phase) {
      if (!this.footer) return;
      
      // Remove all phase classes
      this.phases.forEach(p => this.footer.classList.remove(p));
      
      // Add current phase class
      this.footer.classList.add(phase);
      this.currentPhase = phase;
      
      console.log(`ðŸŒ™ Footer Animation: ${phase} phase`);
    }

    startCycle() {
      this.animationInterval = setInterval(() => {
        this.nextPhase();
      }, this.phaseDurations[this.currentPhase]);
    }

    nextPhase() {
      this.phaseIndex = (this.phaseIndex + 1) % this.phases.length;
      const nextPhase = this.phases[this.phaseIndex];
      
      this.setPhase(nextPhase);
      
      // Restart timer with new phase duration
      if (this.animationInterval) {
        clearInterval(this.animationInterval);
        this.startCycle();
      }
    }

    pauseAnimation() {
      if (this.animationInterval) {
        clearInterval(this.animationInterval);
        this.animationInterval = null;
      }
    }

    resumeAnimation() {
      if (!this.animationInterval) {
        this.startCycle();
      }
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new FooterAnimationController();
  });
</script>